<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/vk_white"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    app:cardElevation="0dp">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="false"
        app:cardCornerRadius="0dp"
        app:cardElevation="0dp">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <View
                android:layout_width="wrap_content"
                android:layout_height="59dp"
                android:layout_gravity="top"
                android:background="@color/color1">

            </View>

            <ImageButton
                android:layout_width="28dp"
                android:layout_height="53dp"
                android:layout_margin="2dp"
                android:background="@drawable/image_button_cancel_style"
                android:clickable="true"
                android:src="@drawable/ic_backar" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="53dp"
                android:layout_gravity="top"
                android:layout_marginVertical="2dp"
                android:layout_marginLeft="32dp"
                android:background="@android:color/transparent"
                android:enabled="false"
                android:gravity="center"
                android:text="Розетка"
                android:textColor="@color/vk_white"
                android:textSize="36dp"
                android:textStyle="bold" />

            <ImageView
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:layout_gravity="right"
                android:layout_margin="8dp"
                android:orientation="horizontal"
                app:srcCompat="@drawable/ic_socket" />
        </FrameLayout>
    </android.support.v7.widget.CardView>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="0dp">

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_marginHorizontal="10dp"
            android:layout_weight="1"
            android:background="@drawable/button_kettle_style"
            android:text="Включить" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_marginHorizontal="10dp"
            android:layout_weight="1"
            android:background="@drawable/button_kettle_style"
            android:elevation="2dp"
            android:text="Выключить" />

    </LinearLayout>


    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="2dp"
        android:clickable="true">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:orientation="horizontal"
                android:text="Время включения: "
                android:textColor="@color/vk_black"
                android:textSize="24dp"
                android:layout_marginLeft="8dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="250dp"
                android:background="@android:color/transparent"
                android:text="00 : 00"
                android:textSize="24dp" />

            <Switch
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginHorizontal="8dp" />
        </FrameLayout>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="2dp"
        android:clickable="true">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:orientation="horizontal"
                android:text="Время выключения: "
                android:textColor="@color/vk_black"
                android:textSize="24dp"
                android:layout_marginLeft="8dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="250dp"
                android:background="@android:color/transparent"
                android:text="00 : 00"
                android:textSize="24dp" />

            <Switch
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="right"
                android:layout_marginHorizontal="8dp" />


        </FrameLayout>

    </android.support.v7.widget.CardView>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="2dp"
        android:gravity="center">

        <TimePicker
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:headerBackground="@color/color1"
            android:numbersSelectorColor="@color/color1">

        </TimePicker>
    </LinearLayout>


</LinearLayout>