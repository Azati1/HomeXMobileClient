<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.SmartDeviceSettingActivities.LockSettingsActivity"
    android:layout_gravity="center">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        app:cardCornerRadius="0dp"
        app:cardElevation="0dp">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <View
                android:id="@+id/kek"
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:layout_gravity="top"
                android:background="@color/color1" />

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="55dp"
                android:layout_gravity=""
                android:background="@android:color/transparent"
                android:src="@drawable/ic_backar"
                android:layout_marginLeft="4dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Замок"
                android:layout_gravity="left"
                android:layout_marginLeft="32dp"
                android:textSize="36dp"
                android:background="@android:color/transparent"
                android:textColor="@color/vk_white"
                android:textStyle="bold"
                android:enabled="false"/>

            <ImageView
                android:id="@+id/imageView13"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:layout_gravity="right"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginBottom="8dp"
                android:orientation="horizontal"
                app:srcCompat="@drawable/ic_lock" />


        </FrameLayout>
    </android.support.v7.widget.CardView>

    <ImageButton
        android:id="@+id/backar"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/image_button_style1"
        android:src="@drawable/ic_fingerprints"
        android:scaleType="fitCenter"
        />

</android.support.constraint.ConstraintLayout>