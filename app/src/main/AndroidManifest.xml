<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.bsaldevs.mobileclient">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".MyApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name="com.vk.sdk.VKServiceActivity"
            android:label="ServiceActivity"
            android:theme="@style/VK.Transparent" />
        <activity android:name=".Activities.MainActivity" />
        <activity android:name=".Activities.SplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".Activities.LampSettingsActivity" />
        <activity android:name=".Activities.ConditionerSettingsActivity" />
        <activity android:name=".Activities.KettleSettingsActivity" />
        <activity android:name=".Activities.MusicPlayerSettingsActivity" />
        <activity android:name=".Activities.LoginActivity" />
        <activity
            android:name=".Activities.AboutOfProgramActivity"
            android:label="@string/title_activity_main2" />
        <activity android:name=".Activities.RegistrationActivity" />
        <activity android:name=".Activities.BlindSettingsActivity" />
        <activity
            android:name=".Activities.DevicesActivity"
            android:label="@string/title_activity_devices" />
        <activity
            android:name=".Activities.AddNewDeviceActivity"
            android:label="@string/title_activity_add_new_smart_device" />
        <activity
            android:name=".Activities.FloorSettingsActivity"
            android:label="@string/title_activity_floor_settings" />
        <activity
            android:name=".Activities.SocketSettingsActivity"
            android:label="@string/title_activity_socket_settings" />
        <activity
            android:name=".Activities.LockSettingsActivity"
            android:label="@string/title_activity_lock_settings" />

        <meta-data
            android:name="com.facebook.sdk.ApplicationId"
            android:value="@string/facebook_app_id" />

        <activity
            android:name="com.facebook.FacebookActivity"
            android:configChanges="keyboard|keyboardHidden|screenLayout|screenSize|orientation"
            android:label="@string/app_name" />
        <activity
            android:name="com.facebook.CustomTabActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />

                <data android:scheme="@string/fb_login_protocol_scheme" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Activities.HoverSettingsActivity"
            android:label="@string/title_activity_hover_settings"></activity>
    </application>

</manifest>